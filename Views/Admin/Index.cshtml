@model IEnumerable<Admin>

@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Admin List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Admin" asp-action="Create" class="btn btn-primary">
               <i class="bi bi-plus-circle-fill"></i> &nbsp; Create New Admin Account
            </a>
        </div>
    </div>


    <table class="table table-bordered">
        <thead>
            <tr>
                    <th>
                        Admin Id
                    </th> 
                    <th>
                        First Name
                    </th> 
                    <th>
                        Middle Name
                    </th> 
                    <th>
                        Last Name
                    </th> 
                    <th>
                        User Name
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Created
                    </th>
                    <th>
                        Updated
                    </th>
                    <th>

                    </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td>
                        @row.AdminId
                    </td>
                    <td>
                        @row.FirstName
                    </td>
                    <td>
                        @row.MiddleName
                    </td>
                    <td>
                        @row.LastName
                    </td>
                    <td>
                        @row.Username
                    </td>
                    <td>
                        @row.Password
                    </td>
                    <td>
                        @row.Created
                    </td>
                    <td>
                        @row.Updated
                    </td>
                    <td>
                        <div class="w-75 btn-group bth" role="group">
                            <a asp-asp-controller="Admin" asp-action="Edit" asp-route-id ="@row.AdminId" class="btn btn-primary">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <i> &nbsp; </i>
                            <a asp-asp-controller="Admin" asp-action="Delete" asp-route-id ="@row.AdminId" class="btn btn-danger">
                                <i class="bi bi-trash3-fill"></i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
